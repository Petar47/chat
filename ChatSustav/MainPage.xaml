<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="ChatSustav.MainPage">

    <VerticalStackLayout Padding="30">
        <Label Text="Korisničko ime" />
        <Entry x:Name="usernameEntry" Placeholder="Unesite ime" />
        <Label Text="Lozinka" />
        <Entry x:Name="passwordEntry" IsPassword="True" Placeholder="Unesite lozinku" />
        <Button Text="Prijava" Clicked="OnLoginClicked" />
        <Label x:Name="messageLabel" TextColor="Red"/>
    </VerticalStackLayout>

</ContentPage>
